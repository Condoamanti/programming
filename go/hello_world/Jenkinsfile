podTemplate(
  cloud: 'kubernetes',
  namespace: 'jenkins',
  activeDeadlineSeconds: '100',
  showRawYaml: 'false',
  containers: [
  containerTemplate(
    name: 'golang',
    image: 'golang:latest',
    ttyEnabled: true,
    command: 'cat'
  )
]) {

  node(POD_LABEL) {
    try {
      container('golang') {

        stage("Get Golang Project") {
          git url: 'https://github.com/Condoamanti/programming.git'
        }

        stage('Build Golang Project') {
          println("${WORKSPACE}")
          dir("${WORKSPACE}") {
            sh """
            ls;
            cd ${WORKSPACE};
            ls;
            """
          }
        }
      } // container end
    } catch (err) {
      echo "Caught: ${err}"
      currentBuild.result = 'FAILURE'
    } finally {
    }
  }
}

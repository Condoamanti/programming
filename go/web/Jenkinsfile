podTemplate(
  cloud: 'kubernetes',
  namespace: 'jenkins',
  activeDeadlineSeconds: '100',
  showRawYaml: 'false',
  containers: [
  containerTemplate(
    name: 'ubuntu',
    image: 'ubuntu:latest',
    ttyEnabled: true,
    command: 'cat'
  )
]) {
  node(POD_LABEL) {
      try {
        // project variables
        def project_directory = "${WORKSPACE}/go/web"

          stage("Get Golang Project") {
            git url: 'https://github.com/Condoamanti/programming.git'
          } // stage end

          container('ubuntu') {
            stage('Download Docker Dependencies') {
              sh """
              echo 'installing curl'
              apt-get install curl
              echo 'adding docker gpg key'
              curl -fsSL https://download.docker.com/linux/ubuntu/gpg | apt-key add -
              echo 'installing docker-ce'
              apt-get install docker-ce
              echo 'installing docker-ce-cli'
              apt-get docker-ce-cli
              echo 'installing containerd.io'
              apt-get containerd.io;
              """
            } // stage end
          } // container end
      } catch (err) {
        echo "Caught: ${err}"
        currentBuild.result = 'FAILURE'
      } finally {
    }
  } // node end
} // podTemplate end
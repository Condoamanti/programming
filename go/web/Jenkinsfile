podTemplate(
  cloud: 'kubernetes',
  namespace: 'jenkins',
  activeDeadlineSeconds: '100',
  showRawYaml: 'false',
  containers: [
  containerTemplate(
    name: 'ubuntu',
    image: 'ubuntu:latest',
    ttyEnabled: true,
    command: 'cat'
  )
]) {
  node(POD_LABEL) {
      try {
        // project variables
        def project_directory = "${WORKSPACE}/go/web"

          stage("Get Golang Project") {
            git url: 'https://github.com/Condoamanti/programming.git'
          } // stage end

          container('ubuntu') {
            stage('Build Golang Project') {
              sh """
              echo 'installing docker-ce'
              sudo apt-get install docker-ce
              echo 'installing docker-ce-cli'
              sudo apt-get docker-ce-cli
              echo 'installing containerd.io'
              sudo apt-get containerd.io;
              """
            } // stage end
          } // container end
      } catch (err) {
        echo "Caught: ${err}"
        currentBuild.result = 'FAILURE'
      } finally {
    }
  } // node end
} // podTemplate end